# farm_clawed Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# AI PROVIDERS
# =============================================================================

# OpenAI API Key (optional - Ollama works without this)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# =============================================================================
# IFTTT WEBHOOKS (Generic Actuator Layer)
# =============================================================================

# Get your key from https://ifttt.com/maker_webhooks -> Documentation
IFTTT_WEBHOOK_KEY=YOUR_IFTTT_WEBHOOK_KEY_HERE

# Event name prefix for farm_clawed automations (default: farm_clawed_)
IFTTT_EVENT_PREFIX=farm_clawed_

# Enable simulation mode (no actual webhook calls)
IFTTT_SIMULATION_MODE=false

# =============================================================================
# FMIS INTEGRATIONS (Optional)
# =============================================================================

# John Deere Operations Center
# Register at https://developer.deere.com
DEERE_CLIENT_ID=YOUR_DEERE_CLIENT_ID_HERE
DEERE_CLIENT_SECRET=YOUR_DEERE_CLIENT_SECRET_HERE
DEERE_REDIRECT_URI=http://localhost:18789/oauth/deere/callback

# Climate FieldView
# Register at https://developer.climate.com
FIELDVIEW_CLIENT_ID=YOUR_FIELDVIEW_CLIENT_ID_HERE
FIELDVIEW_CLIENT_SECRET=YOUR_FIELDVIEW_CLIENT_SECRET_HERE
FIELDVIEW_REDIRECT_URI=http://localhost:18789/oauth/fieldview/callback

# =============================================================================
# HOME ASSISTANT (Optional)
# =============================================================================

HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=YOUR_HOME_ASSISTANT_LONG_LIVED_TOKEN_HERE

# =============================================================================
# DATABASE
# =============================================================================

# SQLite database path (default: ~/.farm_clawed/farm_clawed.db)
DATABASE_PATH=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Gateway port (default: 18789)
PORT=18789

# Bind address (use 127.0.0.1 for local-only, 0.0.0.0 for network access)
# WARNING: 0.0.0.0 without authentication is unsafe!
BIND_ADDRESS=127.0.0.1

# Enable authentication (required if BIND_ADDRESS=0.0.0.0)
AUTH_ENABLED=false
AUTH_TOKEN=YOUR_AUTH_TOKEN_HERE

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Redact secrets from logs (recommended: true)
LOG_REDACT_SECRETS=true
